<div class="container">
  <h1>All our caravans (<%= Caravan.count %>)</h1>
  <div class="row">
      <% @caravans.each do |caravan| %>
      <div class="col-3">
        <div class="card h-100">
          <div class="card-image" style= "background-image: url(<%= cl_image_path(caravan.photo.key) if caravan.photo.attached? %>)">
          </div>
          <div class="card-body">
            <h4 class="card-title"><%= caravan.name %></h4>
            <h6 class="card-subtitle mb-2 text-muted"><%= caravan.address %></h6>
            <div class="flex">
              <i class="fas fa-user-group"></i> <%= caravan.number_of_guests %><%# fix font awesome icon line 13 %>
              <i class="fas fa-euro-sign"></i> <%= caravan.price %>
            </div>
          </div>
          <div class="card-footer">
        </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>


<%# linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), %>
