<%= simple_form_for [ @caravan] do |f| %>
  <%= f.input :name %>
  <%= f.input :price %>
  <%= f.input :description %>
  <%= f.input :address %>
  <%= f.input :availability %>
  <%= f.input :number_of_guests %>
  <%= f.input :photo, as: :file %>
  <%= f.submit "Submit caravan", class: "btn btn-primary" %>
<% end %>
