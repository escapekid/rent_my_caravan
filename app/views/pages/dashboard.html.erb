<h1>Welcome <%= @user.first_name.capitalize %></h1>

<p>Here are your current bookings:</p>

<table class="table table-secondary">
    <thead>
      <tr >
        <th>Caravan</th>
        <th>Start Date</th>
        <th>End Date</th>
        <%# <th colspan="3"></th> %>
      </tr>
    </thead>

    <tbody>
      <% @user.bookings.each do |booking| %>
        <tr>
          <td><%= booking.caravan.name %></td>
          <td><%= booking.start_date %></td>
          <td><%= booking.end_date %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
